{
  "manifest_version": 2,
  "name": "Ghost Downloader",
  "version": "1.0.0",
  "description": "The official browser extension for Ghost Downloader Server.",
  "permissions": [
    "storage",
    "downloads",
    "alarms",
    "<all_urls>"
  ],
  "browser_action": {
    "default_popup": "src/pages/popup/index.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "options_ui": {
    "page": "src/pages/options/index.html",
    "open_in_tab": true
  },
  "background": {
    "scripts": ["src/background/main.ts"],
    "persistent": true
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content-scripts/main.ts"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "ghost-downloader@example.com"
    }
  }
}
